POSTGRESQL_VERSION=11.20

cd postgres
tar xfz postgresql-${POSTGRESQL_VERSION}.tar.gz
cd postgresql-${POSTGRESQL_VERSION}
./configure  --prefix=${BOSH_INSTALL_TARGET}
make
make install

