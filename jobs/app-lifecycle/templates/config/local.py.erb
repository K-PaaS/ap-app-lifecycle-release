from .common import *
<%
  def spec_ext_ip
    if spec.networks.vip.present?
      spec.networks.vip.ip
    elsif spec.networks.service_public.present?
      spec.networks.service_public.ip
    else
      spec.address
    end
  end
  TAIGA_SERVER_URL = spec_ext_ip
%>

MEDIA_URL = "http://<%= "#{TAIGA_SERVER_URL}" %>/media/"
STATIC_URL = "http://<%= "#{TAIGA_SERVER_URL}" %>/static/"

SITES["front"]["scheme"] = "http"
SITES["front"]["domain"] = "<%= "#{TAIGA_SERVER_URL}" %>"

DEBUG = False
PUBLIC_REGISTER_ENABLED = True

DEFAULT_FROM_EMAIL = "no-reply@example.com"
SERVER_EMAIL = DEFAULT_FROM_EMAIL
